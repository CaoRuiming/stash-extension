{
  "manifest_version": 3,
  "name": "Stash",
  "version": "1.0",
  "description": "Stashes URLs for later.",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "action": {
    "browser_style": true,
    "default_popup": "html/popup.html",
    "default_icon": "icon.svg"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "downloads"
  ]
}
